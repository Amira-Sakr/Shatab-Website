<%- include('../partials/header'); -%>
<div class="container">
  <div class="row" style="margin-top: 100px;">
    <% var cnt = 1; %> <% orders.forEach(function(order){%>
    <div
      class="col-12 col-md-6 col-lg-4 col-xl-3 col d-flex justify-content-center"
      style="margin-bottom: 15px;"
    >
      <div class="card text-center" style="max-width: 80%;">
        
        <div class="card-body" style="text-align: center;">
          <h3 class="card-title">Order no: <%=cnt%></h3>

          <p class="card-text">
            <strong style="color:slategray;">Total Quantity:</strong> <%=order.cart.totalQty %> 
            
            <p><strong style="color:slategray;">Products: </strong></p><%
            Object.keys(order.cart.items).forEach(function (key){%> <%=
            order.cart.items[key].qty%>.<strong style="color:slategray;"><%= order.cart.items[key].item.name%>(<%=
                        order.cart.items[key].qtty%> <%= order.cart.items[key].item.unit%>)</strong> -
            <%= order.cart.items[key].price%>L.E.<%});%>
          </p>
        </div>
          <li class="list-group-item list-group-item-success">
            Total price:<%=order.cart.totalPrice%>L.E.
          </li>
      </div>
    </div>
    <% cnt++%> <%})%>
  </div>
</div>
<%- include('../partials/footer'); -%>
