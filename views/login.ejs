<%- include('partials/header'); -%>
<div style="background-color: #f2f2f2; padding-top: 10px; padding-bottom: 10rem;">
<div class="container-xl">
<div
  class="card text-center w-75 mx-auto "
  style=" padding: 20px;  margin-top: 8rem;"
>
  <h1 id="title">Login <i class="fas fa-sign-in-alt"></i></h1>
  <div class="row">
    <div class="col text-center">
      <form action="/login" method="POST">
        <div class="form-group">
          <input
            id="inputText"
            type="text"
            class="form-control-lg "
            name="username"
            required
            placeholder="Username"
          />
        </div>
        <div class="form-group">
          <input
            id="inputText"
            type="password"
            name="password"
            class="form-control-lg "
            required
            placeholder="Password"
          />
        </div>
        <button
          type="submit"
          class="btn btn-success btn-lg rounded "
          id="btnsize"
        >
          Login
        </button>
      </form>
      <p>Don't have an account? <a href="/register">Sign up instead!</a></p>
    </div>
  </div>
</div>
</div>
</div>
<%- include('partials/footer'); -%>
