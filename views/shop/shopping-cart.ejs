<%- include('../partials/header'); -%>
<% if (products){%>

    <div class="jumpotron rounded" style="background-color:#dcdcdc; margin-top: 4rem; padding: 30px;">
        <div class="row">
            <div class="col-12 col-md-4" style="padding-top: 5rem;">
                <p style="text-align: center;"> <i class="fas fa-shopping-cart fa-7x" style="color:#5cb85c;"></i><br>
                <h2 style="text-align: center;color:#3e8e3e;">Your Shopping Cart</h2></p>
            </div>
            <div class="col-12 col-md-8" style="padding-top: 3rem;">
                <div class="container">
                    <div class="card border-">
                        <div class="card-header">
                            <div class="row ">
                                <div class="col"><label id="labelstyle">Product Name</label></div>  
                                <div class="col"><label id="labelstyle">Product Amount</label></div>
                                <div class="col"><label id="labelstyle">Quantity Per Unit</label></div>
                                <div class="col"><label id="labelstyle">Total Price</label></div> 
                                <div class="col"><label id="labelstyle">Reduce Quantity</label></div>
                                <div class="col"></div>
                            </div>    
                        </div>
                        <div class="card-body">
                            <% products.forEach(function(products){%>
                            <div class="row">
                                <div class="col" ><%=products.item.name%></div>
                                <div class="col" ><%=products.qty%></div>
                                <div class="col" ><%=products.qtty%> <%=products.item.unit%></div>
                                <div class="col" ><%=products.price%> L.E</div>
                                <div class="col"><p style="font-weight: 10px;">reduce by:</p> 
                                    <form action="/product/<%=products.item._id%>/reduce/" method="POST">
                                        <input type="text" name="quantity" style="width: 40px;"  required>
                                        <button class="btn  btn-lg pl-0">
                                            <i class="fas fa-caret-down fa-lg primary"></i>
                                        </button>
                                    </form>
                                </div>    
                                <div class="col text-center">
                                    <a href="/product/<%=products.item._id%>/remove/">
                                        <i class="fas fa-trash" style="color: red;"></i></a>
                                </div>
                            </div>    
                                
                            
                            <hr>
                            <% }) %>
                        </div>       
                        <div class="card-footer">
                            <h5>Total: <%=totalPrice%> L.E</h5>
                        </div>
                    </div>    
                </div>
                <div class="float-right">
                    <a href="/checkout" type="button" class="btn btn-success btn-block" 
                    style="margin-right: 15px; margin-top: 20px; width: 12rem;">Checkout</a>
                </div>    
            </div>
        </div>
    </div>  
    
    <%} else {%>
        <div class="container" style="margin-top: 10rem;">
            <h2 style="text-align: center;">No Items in Cart</h2>
    </div>
    <%}%>
    
    
    <%- include('../partials/footer'); -%>
    
    