<% if (products){%>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <% products.forEach(function(products){%>
                <li class="list-group-item">
                    <span class="badge"><%=products.qty%></span>
                    <strong><%=products.item.name%></strong>
                    <span class="label label-success">$<%=products.price%></span>
                    <div class="btn-group">
                       <button class="btn btn-primary btn-xs dropdown-toggle" type="button">Action
                           <span class="caret"></span>
                       </button>
                       <div class="dropdown-menu">
                        <a class="dropdown-item" href="/product/<%=products.item._id%>/reduce/">Reduce by 1</a>
                        <a class="dropdown-item" href="/product/<%=products.item._id%>/remove/">Remove All</a>
                    </div>
            
                    </div>
                </li>
                <% }) %>
                
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total:<%=totalPrice%> </strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
    
    
    <%} else {%>
    <div class="row">
        <div class="col-sm-6 col-ms-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
    <%}%>
    
    
    
    
    