<%- include('partials/header'); -%>
<div style="background-color: #f2f2f2; padding-top: 10px;">
  <div class="container-xl">
    <div
      class="card text-center w-75 mx-auto"
      style="padding: 20px; margin-top: 6rem;"
    >
      <h1 id="title">Sign Up</h1>
      <div class="row">
        <div class="col text-center">
          <form action="/register" method="POST">
            <div class="form-group">
              <input
                id="inputText"
                type="text"
                class="form-control-lg w-75"
                name="username"
                required
                placeholder="Username"
              />
            </div>
            <div class="form-group">
              <input
                id="inputText"
                type="text"
                class="form-control-lg w-75"
                required
                name="Email"
                placeholder="Email"
              />
            </div>
            <div class="form-group">
              <input
                id="inputText"
                type="password"
                class="form-control-lg w-75"
                name="password"
                required
                placeholder="Password"
              />
            </div>
            <div class="form-group">
              <input
                id="inputText"
                type="number"
                class="form-control-lg w-75"
                name="phone"
                required
                placeholder="Phone number"
              />
            </div>
            <div class="form-group">
              <input
                id="inputText"
                type="text"
                class="form-control-lg w-75"
                name="address"
                required
                placeholder="Address"
              />
            </div>
            <div class="form-group">
              <input
                id="inputText"
                type="text"
                class="form-control-lg w-75"
                name="admin"
                placeholder="Admin Code"
              />
            </div>
            <button
              type="submit"
              class="btn btn-success btn-lg w-75 rounded"
              id="btnsize"
            >
              Sign Up
            </button>
          </form>
          <p id="x">Already have account? <a href="/login">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer'); -%>
