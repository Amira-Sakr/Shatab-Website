<%- include('partials/header'); -%>
<div class="card text-center w-50 mx-auto" style=" padding: 20px; margin-top: 6rem;">
  <h1 id="title">Sign Up</h1>
  <div class="row">
    <div class="col text-center">
      <form action="/register" method="POST">
        <div class="form-group">	
          <input id="inputText" type="text" class="form-control-lg" name="username" required placeholder="Username" >
        </div>
        <div class="form-group">
          <input id="inputText" type="text" class="form-control-lg" required name="Email" placeholder="Email">
        </div>
        <div class="form-group">
          <input id="inputText" type="password" class="form-control-lg" required placeholder="Password">
        </div>
        <div class="form-group">
          <input id="inputText" type="text" class="form-control-lg" name="admin" placeholder="Admin Code">
        </div>
        <button type="submit" class="btn btn-success btn-lg rounded" id="btnsize">Sign Up</button>
      </form>
      <p id="x">Already have account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>

