<%- include('../partials/header'); -%>
    <div class="container">
            <header class="jumbotron">
                <div class="container" style="text-align: center;">
                    <p>Searching for a specific company?</p>
                    <p>
                    <form action="/category/<%=category._id %>" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Company Search..." class="form-control">
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                    </p>
                </div>
            </header>

            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <div class="col-md-12">
                    <% if(noMatch !== "") { %>
                    <h3><%= noMatch %></h3>
                    <% }%>
                </div>
            </div>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <%category.companyname.forEach(function(company){%>
            <div class="col-md-3 col-sm-6">
    
                <div class="thumbnail">
                    <img src="<%=company.image%>" alt="error" style="height: 200px;">
                    <div class="caption">
                        <h4> <%=company.name%> </h4>
                    </div>
                    <p>
                        <a href="/company/<%=company._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
    
            <% }); %>
        </div>
    </div>
    </div>
        
<% if(currentUser && currentUser.isAdmin){%>
<a href="/category/<%=category._id%>/company/new">Add new companies</a>
<%}%>
    <%- include('../partials/footer'); -%>

