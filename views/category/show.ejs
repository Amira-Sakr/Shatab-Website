<%- include('../partials/header'); -%>
    <div class="container">
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <%category.companyname.forEach(function(company){%>
            <div class="col-md-3 col-sm-6">
    
                <div class="thumbnail">
                    <img src="<%=company.image%>" alt="error" style="height: 200px;">
                    <div class="caption">
                        <h4> <%=company.name%> </h4>
                    </div>
                    <p>
                        <a href="/company/<%=company._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
    
            <% }); %>
        </div>
    </div>
    </div>
        
<a href="/category/<%=category._id%>/company/new">Add new companies</a>

